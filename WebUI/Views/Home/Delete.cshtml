@model WebUI.Models.RequestsViewModel


@using (Html.BeginForm("Delete", "Home"))
{
    @Html.AntiForgeryToken()
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">×</span><span class="sr-only">Close</span></button>
            <h3 class="modal-title">Удалить заявку</h3>
        </div>
        <div class="modal-body">
            <span class="h4 text-success text-center">@Model.Name</span>
        </div>
        <div class="modal-footer">
            <div class="btn-group" role="group" aria-label="group button">
                <div class="btn-group" role="group">
                    <button type="button" class="btn btn-primary form-control" data-dismiss="modal" role="button">Отмена</button>
                </div>
                <div class="btn-group" role="group">
                    <input type="submit" value="Удалить" class="btn btn-danger form-control" />
                </div>
            </div>
        </div>
    </div>
}
